{
  "include": ["src", "test"],
  "ts-node": {
    "esm": true
  },
  "compilerOptions": {
    // Base
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2022",
    // "verbatimModuleSyntax": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",

    // Strictness
    "strict": true,
    "noUncheckedIndexedAccess": true,

    // transpiling with typescript
    // "moduleResolution": "NodeNext",
    // "module": "NodeNext",
    // "outDir": "dist",
    // "sourceMap": true,
  
    // no transpiling
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "noEmit": true,

    // 
    "lib": ["ES2022"]
  }
}
